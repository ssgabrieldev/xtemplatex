{
  "$schema": "https://raw.githubusercontent.com/mfussenegger/dapconfig-schema/master/dapconfig-schema.json",
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "name": "Jest",
      "request": "launch",
      "restart": true,
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceFolder}/node_modules/jest/bin/jest.js",
        "--runInBand",
        "--watch"
      ]
    }
  ]
}

